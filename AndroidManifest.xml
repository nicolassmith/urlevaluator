<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.nicolassmith.urlevaluator"
    android:versionCode="4"
    android:versionName="1.3" >

    <uses-sdk android:minSdkVersion="10" android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:allowBackup="false">
        <activity
            android:name=".UrlEvaluatorActivity"
            android:label="@string/app_name"
            android:excludeFromRecents="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" android:host="goo.gl" />
                <data android:scheme="http" android:host="bit.ly" />
                <data android:scheme="http" android:host="m.google.com" />
                <data android:scheme="http" android:host="g.co" />
                <data android:scheme="http" android:host="tinyurl.com" />
                <data android:scheme="http" android:host="instagr.am" />
                <data android:scheme="http" android:host="fb.me" />
                <data android:scheme="http" android:host="ow.ly" />
                <data android:scheme="http" android:host="politi.co" />
                <data android:scheme="http" android:host="buff.ly" />
                <data android:scheme="http" android:host="t.co" />
                <data android:scheme="http" android:host="nyti.ms" />
                <data android:scheme="http" android:host="qr.ae" />
                <data android:scheme="http" android:host="youtu.be" />
                <data android:scheme="http" android:host="git.io" />
            </intent-filter>
        </activity>
    </application>

</manifest>